{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "auto-imports.d.ts",
    "components.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": [
      "ES2022",
      "DOM",
      "ESNext.Intl"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@#/*": [
        "./src/assets/mc_lang/valid/*"
      ]
    }
  }
}
